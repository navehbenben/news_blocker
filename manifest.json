{
  "manifest_version": 3,
  "name": "My Minimal Extension",
  "version": "1.0",
  "description": "Extension that does almost nothing (yet).",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage"]
}